{
  "name": "codehelp",
  "displayName": "CodeHelp",
  "description": "AI assistant for explaining and fixing code",
  "version": "0.0.1",
  "engines": {
    "vscode": "^1.100.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "onStartupFinished"
  ],
  "main": "./extension.js",
  "contributes": {
    "commands": [
      {
        "command": "codehelp.explainSelectedCode",
        "title": "Explain Selected Code"
      },
      {
        "command": "codehelp.explainInWebView",
        "title": "Explain Code (WebView)"
      },
      {
        "command": "codehelp.fixSelectedCode",
        "title": "Fix Selected Code (WebView)"
      },
      {
        "command": "codehelp.openChat",
        "title": "ðŸ“œ Ask Master Ruwaan"
      }
    ],
    "menus": {
      "editor/title": [
        {
          "command": "codehelp.openChat",
          "when": "editorTextFocus",
          "group": "navigation"
        }
      ]
    }
  },
  "scripts": {
    "lint": "eslint .",
    "pretest": "npm run lint",
    "test": "vscode-test"
  },
  "devDependencies": {
    "@types/mocha": "^10.0.10",
    "@types/node": "20.x",
    "@types/vscode": "^1.100.0",
    "@vscode/test-cli": "^0.0.10",
    "@vscode/test-electron": "^2.5.2",
    "eslint": "^9.25.1"
  },
  "dependencies": {
    "axios": "^1.9.0",
    "dotenv": "^16.5.0",
    "highlight.js": "^11.11.1"
  }
}
